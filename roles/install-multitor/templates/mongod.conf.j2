# storage 
storage:
  dbPath: {{ mongodb_db_path }}
  engine: wiredTiger
  journal:
    enabled: true

# logging 
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# network
net:
  port: 27017
#  ssl:
#     mode: requireSSL
#     PEMKeyFile: /etc/ssl/mongodb.pem
#     allowInvalidCertificates: true
#     allowConnectionsWithoutCertificates: true

# replication
replication:
   replSetName: "rs0"

